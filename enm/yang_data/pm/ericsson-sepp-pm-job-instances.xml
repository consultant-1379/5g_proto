<config xmlns="http://tail-f.com/ns/config/1.0">
    <pm xmlns="urn:rdns:com:ericsson:oammodel:ericsson-pm">
        <job>
            <name>sepp_system_job</name>
            <granularity-period>five-min</granularity-period>
            <requested-job-state>active</requested-job-state>
            <type>measurement-job</type>
            <measurement-reader>
                <name>sepp_service_reader</name>
                <group-ref>sepp_service</group-ref>
            </measurement-reader>
            <measurement-reader>
                <name>sepp_egress_reader</name>
                <group-ref>sepp_egress</group-ref>
            </measurement-reader>
            <measurement-reader>
                <name>sepp_ingress_reader</name>
                <group-ref>sepp_ingress</group-ref>
            </measurement-reader>
            <measurement-reader>
                <name>sepp_system_metrics_reader</name>
                <group-ref>sepp_system_metrics</group-ref>
            </measurement-reader>
            <measurement-reader>
                <name>sepp_traffic_kpis_reader</name>
                <group-ref>sepp_traffic_kpis</group-ref>
            </measurement-reader>
            <measurement-reader>
                <name>sepp_nrf_reader</name>
                <group-ref>sepp_nrf</group-ref>
            </measurement-reader>
            <measurement-reader>
                <name>sepp_ms_reader</name>
                <group-ref>sepp_ms</group-ref>
            </measurement-reader>
            <measurement-reader>
                <name>sepp_n32c_initiating_reader</name>
                <group-ref>sepp_n32c_initiating</group-ref>
            </measurement-reader>
            <measurement-reader>
                <name>sepp_n32c_responding_reader</name>
                <group-ref>sepp_n32c_responding</group-ref>
            </measurement-reader>
            <measurement-reader>
                <name>sepp_rate_limit_reader</name>
                <group-ref>sepp_rate_limit</group-ref>
            </measurement-reader>
            <measurement-reader>
                <name>sepp_probe_virtual_tap_broker_reader</name>
                <group-ref>sepp_probe_virtual_tap_broker</group-ref>
            </measurement-reader>
            <measurement-reader>
                <name>sepp_vtap_reader</name>
                <group-ref>sepp_vtap</group-ref>
            </measurement-reader>
        </job>
        <job>
            <name>sepp_overload_job</name>
            <granularity-period>one-min</granularity-period>
            <requested-job-state>active</requested-job-state>
            <type>threshold-job</type>
            <measurement-reader>
                <name>sepp_overload_reader</name>
                <measurement-type-ref>sepp_load_avg</measurement-type-ref>
                <group-ref>sepp_system_metrics</group-ref>
                <threshold-direction>increasing</threshold-direction>
                <threshold-monitoring>
                    <name>sepp_overload_threshold_monitoring</name>
                    <threshold-high>70</threshold-high>
                    <threshold-low>60</threshold-low>
                    <threshold-severity>major</threshold-severity>
                </threshold-monitoring>
                <threshold-monitoring>
                    <name>sepp_overload_threshold_escalation</name>
                    <threshold-high>80</threshold-high>
                    <threshold-low>75</threshold-low>
                    <threshold-severity>critical</threshold-severity>
                </threshold-monitoring>
            </measurement-reader>
        </job>
        <job>
            <name>sepp_pvtb_diff_recv_send_successes_packets_ratio_job</name>
            <granularity-period>one-min</granularity-period>
            <requested-job-state>active</requested-job-state>
            <type>threshold-job</type>
            <measurement-reader>
                <name>sepp_pvtb_diff_recv_send_successes_packets_ratio_reader</name>
                <measurement-type-ref>sepp_pvtb_diff_recv_send_successes_packets_ratio</measurement-type-ref>
                <group-ref>sepp_probe_virtual_tap_broker</group-ref>
                <threshold-direction>increasing</threshold-direction>
                <threshold-monitoring>
                    <name>sepp_pvtb_diff_recv_send_successes_packets_ratio_threshold_monitoring</name>
                    <threshold-high>5</threshold-high>
                    <threshold-low>0</threshold-low>
                    <threshold-severity>major</threshold-severity>
                </threshold-monitoring>
            </measurement-reader>
        </job>
        <job>
            <name>sepp_tapcollector_out_tap_frames_dropped_ratio_job</name>
            <granularity-period>one-min</granularity-period>
            <requested-job-state>active</requested-job-state>
            <type>threshold-job</type>
            <measurement-reader>
                <name>sepp_tapcollector_out_tap_frames_dropped_ratio_reader</name>
                <measurement-type-ref>sepp_tapcollector_out_tap_frames_dropped_ratio</measurement-type-ref>
                <group-ref>sepp_vtap</group-ref>
                <threshold-direction>increasing</threshold-direction>
                <threshold-monitoring>
                    <name>sepp_tapcollector_out_tap_frames_dropped_ratio_threshold_monitoring</name>
                    <threshold-high>5</threshold-high>
                    <threshold-low>0</threshold-low>
                    <threshold-severity>major</threshold-severity>
                </threshold-monitoring>
            </measurement-reader>
        </job>
        <job>
            <name>sepp_envoy_segments_dropped_ratio_job</name>
            <granularity-period>one-min</granularity-period>
            <requested-job-state>active</requested-job-state>
            <type>threshold-job</type>
            <measurement-reader>
                <name>sepp_envoy_segments_dropped_ratio_reader</name>
                <measurement-type-ref>sepp_envoy_segments_dropped_ratio</measurement-type-ref>
                <group-ref>sepp_vtap</group-ref>
                <threshold-direction>increasing</threshold-direction>
                <threshold-monitoring>
                    <name>sepp_envoy_segments_dropped_ratio_threshold_monitoring</name>
                    <threshold-high>5</threshold-high>
                    <threshold-low>0</threshold-low>
                    <threshold-severity>major</threshold-severity>
                </threshold-monitoring>
            </measurement-reader>
        </job>
        <job>
            <name>sepp_topology_hiding_job</name>
            <granularity-period>five-min</granularity-period>
            <requested-job-state>active</requested-job-state>
            <type>measurement-job</type>
            <measurement-reader>
                <name>sepp_topology_hiding_reader</name>
                <group-ref>sepp_topology_hiding</group-ref>
            </measurement-reader>
        </job>
    </pm>
</config>

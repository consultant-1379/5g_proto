<config xmlns="http://tail-f.com/ns/config/1.0">
    <pm xmlns="urn:rdns:com:ericsson:oammodel:ericsson-pm">
        <job>
            <name>scp_system_job</name>
            <granularity-period>five-min</granularity-period>
            <requested-job-state>active</requested-job-state>
            <type>measurement-job</type>
            <measurement-reader>
                <name>scp_service_reader</name>
                <group-ref>scp_service</group-ref>
            </measurement-reader>
            <measurement-reader>
                <name>scp_egress_reader</name>
                <group-ref>scp_egress</group-ref>
            </measurement-reader>
            <measurement-reader>
                <name>slf_lookup_reader</name>
                <group-ref>slf_lookup</group-ref>
            </measurement-reader>
            <measurement-reader>
                <name>scp_ingress_reader</name>
                <group-ref>scp_ingress</group-ref>
            </measurement-reader>
            <measurement-reader>
                <name>scp_system_metrics_reader</name>
                <group-ref>scp_system_metrics</group-ref>
            </measurement-reader>
            <measurement-reader>
                <name>scp_traffic_kpis_reader</name>
                <group-ref>scp_traffic_kpis</group-ref>
            </measurement-reader>
            <measurement-reader>
                <name>scp_producerload_reader</name>
                <group-ref>scp_producerload</group-ref>
            </measurement-reader>
            <measurement-reader>
                <name>scp_nrf_reader</name>
                <group-ref>scp_nrf</group-ref>
            </measurement-reader>
            <measurement-reader>
                <name>scp_ms_reader</name>
                <group-ref>scp_ms</group-ref>
            </measurement-reader>
            <measurement-reader>
                <name>scp_rate_limit_reader</name>
                <group-ref>scp_rate_limit</group-ref>
            </measurement-reader>
            <measurement-reader>
                <name>scp_probe_virtual_tap_broker_reader</name>
                <group-ref>scp_probe_virtual_tap_broker</group-ref>
            </measurement-reader>
            <measurement-reader>
                <name>scp_vtap_reader</name>
                <group-ref>scp_vtap</group-ref>
            </measurement-reader>
        </job>
        <job>
            <name>scp_overload_job</name>
            <granularity-period>one-min</granularity-period>
            <requested-job-state>active</requested-job-state>
            <type>threshold-job</type>
            <measurement-reader>
                <name>scp_overload_reader</name>
                <measurement-type-ref>scp_load_avg</measurement-type-ref>
                <group-ref>scp_system_metrics</group-ref>
                <threshold-direction>increasing</threshold-direction>
                <threshold-monitoring>
                    <name>scp_overload_threshold_monitoring</name>
                    <threshold-high>70</threshold-high>
                    <threshold-low>60</threshold-low>
                    <threshold-severity>major</threshold-severity>
                </threshold-monitoring>
                <threshold-monitoring>
                    <name>scp_overload_threshold_escalation</name>
                    <threshold-high>80</threshold-high>
                    <threshold-low>75</threshold-low>
                    <threshold-severity>critical</threshold-severity>
                </threshold-monitoring>
            </measurement-reader>
        </job>
        <job>
            <name>scp_pvtb_diff_recv_send_successes_packets_ratio_job</name>
            <granularity-period>one-min</granularity-period>
            <requested-job-state>active</requested-job-state>
            <type>threshold-job</type>
            <measurement-reader>
                <name>scp_pvtb_diff_recv_send_successes_packets_ratio_reader</name>
                <measurement-type-ref>scp_pvtb_diff_recv_send_successes_packets_ratio</measurement-type-ref>
                <group-ref>scp_probe_virtual_tap_broker</group-ref>
                <threshold-direction>increasing</threshold-direction>
                <threshold-monitoring>
                    <name>scp_pvtb_diff_recv_send_successes_packets_ratio_threshold_monitoring</name>
                    <threshold-high>5</threshold-high>
                    <threshold-low>0</threshold-low>
                    <threshold-severity>major</threshold-severity>
                </threshold-monitoring>
            </measurement-reader>
        </job>
        <job>
            <name>scp_tapcollector_out_tap_frames_dropped_ratio_job</name>
            <granularity-period>one-min</granularity-period>
            <requested-job-state>active</requested-job-state>
            <type>threshold-job</type>
            <measurement-reader>
                <name>scp_tapcollector_out_tap_frames_dropped_ratio_reader</name>
                <measurement-type-ref>scp_tapcollector_out_tap_frames_dropped_ratio</measurement-type-ref>
                <group-ref>scp_vtap</group-ref>
                <threshold-direction>increasing</threshold-direction>
                <threshold-monitoring>
                    <name>scp_tapcollector_out_tap_frames_dropped_ratio_threshold_monitoring</name>
                    <threshold-high>5</threshold-high>
                    <threshold-low>0</threshold-low>
                    <threshold-severity>major</threshold-severity>
                </threshold-monitoring>
            </measurement-reader>
        </job>
        <job>
            <name>scp_envoy_segments_dropped_ratio_job</name>
            <granularity-period>one-min</granularity-period>
            <requested-job-state>active</requested-job-state>
            <type>threshold-job</type>
            <measurement-reader>
                <name>scp_envoy_segments_dropped_ratio_reader</name>
                <measurement-type-ref>scp_envoy_segments_dropped_ratio</measurement-type-ref>
                <group-ref>scp_vtap</group-ref>
                <threshold-direction>increasing</threshold-direction>
                <threshold-monitoring>
                    <name>scp_envoy_segments_dropped_ratio_threshold_monitoring</name>
                    <threshold-high>5</threshold-high>
                    <threshold-low>0</threshold-low>
                    <threshold-severity>major</threshold-severity>
                </threshold-monitoring>
            </measurement-reader>
        </job>
    </pm>
</config>
